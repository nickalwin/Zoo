@model ZooNick.Models.Animal

@{
    ViewData["Title"] = "Create Animal";
}

<h1>Create Animal</h1>

<form method="post" asp-action="Create">
    <div>
        <label>Name:</label>
        <input type="text" name="Name" required />
    </div>
    <div>
        <label>Species:</label>
        <input type="text" name="Species" required />
    </div>
    <div>
        <label>Age:</label>
        <input type="number" name="Age" required />
    </div>
    <div>
        <label>Enclosure ID:</label>
        <input type="number" name="EnclosureId" required />
    </div>
    <div>
        <label>Category ID:</label>
        <input type="number" name="CategoryId" required />
    </div>
    <button type="submit">Create Animal</button>
</form>

<a href="/Animal">Back to Animal List</a>
