@model IEnumerable<ZooNick.Models.Enclosure>

@{
    ViewData["Title"] = "Enclosures";
}

<h1>Enclosures</h1>
<a asp-action="Create">Add New Enclosure</a>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enclosure in Model)
        {
            <tr>
                <td>@enclosure.Name</td>
                <td>@enclosure.Description</td>
                <td>@enclosure.Capacity</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@enclosure.Id">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@enclosure.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
