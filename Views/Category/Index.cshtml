@model IEnumerable<ZooNick.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<a asp-action="Create">Add New Category</a>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@category.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
