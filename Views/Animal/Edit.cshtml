@{
    ViewData["Title"] = "Edit Animal";
}

<h1>Edit Animal</h1>

<form method="post" action="/Animal/Edit">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div>
        <label>Name:</label>
        <input type="text" name="Name" value="@Model.Name" required />
    </div>
    <div>
        <label>Species:</label>
        <input type="text" name="Species" value="@Model.Species" required />
    </div>
    <div>
        <label>Age:</label>
        <input type="number" name="Age" value="@Model.Age" required />
    </div>
    <div>
        <label>Enclosure ID:</label>
        <input type="number" name="EnclosureId" value="@Model.EnclosureId" required />
    </div>
    <div>
        <label>Category ID:</label>
        <input type="number" name="CategoryId" value="@Model.CategoryId" required />
    </div>
    <button type="submit">Update Animal</button>
</form>

<a href="/Animal">Back to Animal List</a>
